{% extends 'base.html.twig' %}


{% block body %}
    <h1>Vehicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Type</th>
                <td>{{ vehicule.type }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque }}</td>
            </tr>
            <tr>
                <th>Modele</th>
                <td>{{ vehicule.modele }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ vehicule.couleur }}</td>
            </tr>
            <tr>
                <th>Prix par jour</th>
                <td>{{ vehicule.prixachat }}</td>
            </tr>
            <tr>
                <th>Dur√©e de la location</th>
                <td>{{ vehicule.dureelocation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vehicule_index') }}">Retour</a>
    {% if app.user %}
        {% if app.user.roles[0] == 2 %}
            <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">Edit</a>
        {% endif %}
    {% endif %}

    {% if app.user %}
        {% if app.user.roles[0] == 2 %}
            {{ include('vehicule/_delete_form.html.twig') }}
        {% endif %}
    {% endif %}
   
    
{% endblock %}
